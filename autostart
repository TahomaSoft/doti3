#!/bin/sh

# Wait for program coming up
wait_for_program () {
  n=0
  while true
  do
    # PID of last background command
    if xdotool search --onlyvisible --pid $!; then
      break
    else
      if [ $n -eq 90 ]; then
        notify-send -u critical "Error during start"
        break
      else
        n=`expr $n + 1`
        sleep 0.5
      fi
    fi
  done
}

## Desktop background color
xsetroot -solid '#101010' &

## Set startup volume
pactl set-sink-volume 0 '30%' &

## Disable beeps
xset -b &

## Keybord layout setting
setxkbmap -layout cz,us -option grp:shift_shift_toggle &

## C-A-Backspace to kill X
#setxkbmap -option terminate:ctrl_alt_bksp & 

## Turns on the numlock key in X11
#numlockx on &

## Load special keys
xmodmap ~/.Xmodmap &

## DPMS monitor setting (standby -> suspend -> off) (seconds)
xset dpms 300 600 900 &

## Set LCD brightness
xbacklight -set 100 &

## Gamma correction through the X server
#xgamma -gamma 1.1 &

## Composite manager
#xcompmgr -cf -r 0 -D 6 &

## Clipboard manager
LC_ALL=C parcellite &

## OSD
dunst &

## Mail checker
dunst-checkmail -p ~/Mail/INBOX/cur/ -s 150 &

## Load "funny" sample
pactl upload-sample ~/.i3/that_was_easy.wav that_was_easy &

## apps with defined workspaces
xchat &
rednotebook &
decibel-audio-player &
lexicon &

PANEL_CONNECTED=0; xrandr | grep -qE "(DP1|VGA1) connected" && PANEL_CONNECTED=1

if [ grep -qE "VGA1 connected" ]; then
  # my configuration is for DP1 (move workspaces explicitly)
  i3-msg move workspace 1 output VGA1
  i3-msg move workspace 2 output VGA1
  i3-msg move workspace 3 output VGA1
  i3-msg move workspace 4 output VGA1
fi

## Working shells on workspace 1
i3-msg workspace 1
i3-msg split h
urxvt -name "shell_a1" &
wait_for_program
if [ $PANEL_CONNECTED -eq 1 ]; then
  gvim --servername vva
  wait_for_program
  i3-msg mode normal
  i3-msg split v
  i3-msg focus left
  i3-msg split v
fi

## Working shells on workspaces 2 and 3
for w in 2 3; do
  i3-msg workspace $w
  i3-msg split h
  urxvt -name "shell_a$w" &
  wait_for_program
  urxvt -name "shell_b$w" &
  wait_for_program
  i3-msg split v
  if [ $PANEL_CONNECTED -eq 1 ]; then
    # extra vertical shell only on panel
    urxvt -name "shell_c$w" &
    wait_for_program
  fi
  i3-msg focus left
  i3-msg split v
done

## Web and mail
i3-msg workspace 4
i3-msg split h
if [ $PANEL_CONNECTED -eq 1 ]; then
  urxvt -name mail -e bash -c "mutt" &
  wait_for_program
fi
google-chrome &
wait_for_program
if [ $PANEL_CONNECTED -eq 1 ]; then
  i3-msg resize grow width 10 px
fi
i3-msg split v

## Refresh and GO!
xrefresh &
exit 0
